# ========================================
# Server Configuration
# ========================================
PORT=3000
APP_VERSION=0.3.0
LOG_LEVEL=info

# ========================================
# Storage Paths
# ========================================
OUTPUT_DIR=./output
ASSETS_DIR=./assets
STORAGE_BASE_URL=http://localhost:3000

# ========================================
# Story Generation Settings
# ========================================
MAX_SCENES=6
MAX_VIDEO_DURATION_SECONDS=70
MIN_STORY_WORD_COUNT=140
MAX_STORY_WORD_COUNT=185

# ========================================
# Rendering Configuration
# ========================================
RENDER_WIDTH=1080
RENDER_HEIGHT=1920
RENDER_FPS=30
RENDER_INCLUDE_CAPTIONS=true
RENDER_INCLUDE_MUSIC=true
RENDER_DARK_GRADE=true
RENDER_VIGNETTE=true
RENDER_GLITCH_TRANSITIONS=true
RENDER_MUSIC_VOLUME=0.18

# ========================================
# OpenAI Configuration (for LLM, TTS, and Image Generation)
# ========================================
# Required for AI-powered story generation, TTS, and image generation
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI LLM Model (for story generation)
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# OpenAI Image Model
# Options: dall-e-3, dall-e-2
OPENAI_IMAGE_MODEL=dall-e-3

# OpenAI Image Quality
# Options: standard, hd
OPENAI_IMAGE_QUALITY=standard

# ========================================
# TTS (Text-to-Speech) Configuration
# ========================================
# Provider: openai, elevenlabs, or mock
TTS_PROVIDER=mock

# TTS API Key (use OPENAI_API_KEY for OpenAI, or ELEVENLABS_API_KEY for ElevenLabs)
TTS_API_KEY=

# TTS Voice ID
# For OpenAI: alloy, echo, fable, onyx, nova, shimmer
# For ElevenLabs: use your custom voice ID
TTS_VOICE_ID=onyx

# TTS Model (for OpenAI)
# Options: tts-1 (faster), tts-1-hd (higher quality)
TTS_MODEL=tts-1

# ========================================
# ElevenLabs Configuration (Optional)
# ========================================
# Only required if using ElevenLabs for TTS
# Get your API key from: https://elevenlabs.io
ELEVENLABS_API_KEY=

# ========================================
# Image Generation Configuration
# ========================================
# Provider: openai or mock
IMAGE_PROVIDER=mock

# Image API Key (uses OPENAI_API_KEY if provider is openai)
IMAGE_API_KEY=

# ========================================
# Storage Configuration (S3/R2)
# ========================================
# Provider: local, s3, or r2
STORAGE_PROVIDER=local

# S3/R2 Configuration (only if STORAGE_PROVIDER is s3 or r2)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
# For Cloudflare R2, use the R2 endpoint URL
S3_ENDPOINT=

# ========================================
# Queue Configuration
# ========================================
# Provider: memory (in-memory) or redis (persistent)
QUEUE_PROVIDER=memory

# Redis URL (only if QUEUE_PROVIDER is redis)
# Example: redis://localhost:6379
REDIS_URL=

# ========================================
# Posting & Webhooks (Optional)
# ========================================
# Webhook URL to POST video metadata and URL after completion
POSTING_WEBHOOK_URL=

# Optional webhook secret for authentication
POSTING_WEBHOOK_SECRET=
